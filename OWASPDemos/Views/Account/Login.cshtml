
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-sm-2"></div>
        <h2 class="col-sm-10">Please sign in</h2>
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email address</label>
        <select class="form-control" name="email" autofocus>
            <option value="barryd@idunno.org">barryd@idunno.org</option>
            <option value="attacker@badsite.example">attacker@badsite.example</option>
        </select>        
    </div>
    <div class="form-group">
        <label for="password"  class="col-sm-2 control-label">Password</label>
        <input type="password" name="password" class="form-control col-sm-10" placeholder="Password" value="password" required>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10"><button class="btn btn-lg btn-primary" type="submit">Sign in</button></div>
    </div>
}
