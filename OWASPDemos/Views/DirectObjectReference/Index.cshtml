@model OWASPDemos.Models.Message

@{
    ViewBag.Title = "ColdMail - @Model.Title";
}

<div class="jumbotron">
    <h1>@Model.Title</h1>
</div>
<div class="container">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">From</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.From</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">To</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.To</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Subject</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Title</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                @Model.Content
            </div>
        </div>
</form>
</div>

